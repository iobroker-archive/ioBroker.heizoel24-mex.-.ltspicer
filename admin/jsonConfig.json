{
    "i18n": true,
    "type": "panel",
    "items": {
        "username": {
            "type": "text",
            "label": "Heizoel24 username (email)",
            "newLine": true
        },
        "passwort": {
            "type": "text",
            "label": "Heizoel24 password"
        },
         "mqtt_active": {
            "type": "checkbox",
            "label": "Use MQTT",
            "default": false,
            "newLine": true
        },
        "broker_address": {
            "type": "text",
            "label": "MQTT broker IP address",
            "newLine": true
        },
        "mqtt_port": {
            "type": "number",
            "label": "MQTT port",
            "default": 1883
        },
        "mqtt_user": {
            "type": "text",
            "label": "MQTT user",
            "newLine": true
        },
        "mqtt_pass": {
            "type": "text",
            "label": "MQTT password"
        },
        "sensor_id": {
            "type": "number",
            "label": "Sensor ID (1-20)",
            "default": 1,
            "newLine": true
        },
        "storeJson": {
          "type": "checkbox",
          "label": "Save Json file",
          "default": false,
          "newLine": true
        },
        "storeDir": {
          "type": "text",
          "label": "Directory for Json file (filename is CalculatedRemaining.json)",
          "default": "/home/iobroker"
        }
    }
}
