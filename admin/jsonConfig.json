{
    "i18n": true,
    "type": "panel",
    "items": {
        "username": {
            "type": "text",
            "label": "Heizoel24 username (email)",
            "newLine": true
        },
        "passwort": {
            "type": "text",
            "label": "Heizoel24 password"
        },
         "mqtt_active": {
            "type": "checkbox",
            "label": "Use MQTT",
            "default": false,
            "newLine": true
        },
        "broker_address": {
            "type": "text",
            "label": "MQTT broker IP address",
            "newLine": true
        },
        "mqtt_port": {
            "type": "number",
            "label": "MQTT port",
            "default": 1883
        },
        "mqtt_user": {
            "type": "text",
            "label": "MQTT user",
            "newLine": true
        },
        "mqtt_pass": {
            "type": "text",
            "label": "MQTT password"
        },
        "debug": {
            "type": "checkbox",
            "label": "Detailed log",
            "default": false,
            "newLine": true
        }
    }
}
